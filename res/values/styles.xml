<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="OnscreenActionIcon">
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">13dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dip</item>
    </style>
    
    <color name="transparent">#00000000</color>
    <style name="Theme.DeleteImageDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GalleryTitle">
        <item name="android:textAppearance">@style/TextAppearance.WindowTitle.Custom</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="GalleryBackground">
        <item name="android:background">@drawable/title_background</item>
    </style>
    <style name="TextAppearance.WindowTitle.Custom" parent="android:style/TextAppearance.WindowTitle">
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="GalleryTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleStyle">@style/GalleryTitle</item>
        <item name="android:windowTitleBackgroundStyle">@style/GalleryBackground</item>
    </style>
</resources>
